{
  "manifest_version": 3,
  "name": "Sentence Rephraser",
  "version": "1.0",
  "description": "Rephrase sentences in different tones using the Gemini API.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": [
    "https://api.gemini.com/*"
  ],
  "icons": {
      "16": "icon/icon.png",
      "48": "icon/icon.png",
      "128": "icon/icon.png"
    }
}
  